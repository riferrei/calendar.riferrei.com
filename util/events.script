PUT _index_template/events-template
{
  "index_patterns": ["events*"],
  "data_stream": {},
  "priority": 200,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "default_pipeline" : "buildEvent",
      "index.lifecycle.name": "events-policy"
    },
    "mappings": {
      "properties" : {
        "@timestamp" : {
          "type" : "date"
        },
        "eventName" : {
          "type" : "text",
          "fields" : {
            "en-us" : {
              "type" : "text",
              "analyzer" : "english"
            },
            "pt-br" : {
              "type" : "text",
              "analyzer" : "brazilian"
            }
          }
        },
        "groupName" : {
          "type" : "keyword"
        },
        "headline" : {
          "type" : "text"
        },
        "location" : {
          "type" : "text"
        },
        "mediaUrl" : {
          "type" : "text"
        },
        "talk" : {
          "type" : "text",
          "fields" : {
            "en-us" : {
              "type" : "text",
              "analyzer" : "english"
            },
            "pt-br" : {
              "type" : "text",
              "analyzer" : "brazilian"
            }
          }
        },
        "resources": {
          "type": "text"
        },
        "text" : {
          "type" : "text"
        },
        "thumbnail" : {
          "type" : "text"
        },
        "website" : {
          "type" : "text"
        }
      }
    }
  }
}

